<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/picker_background">

    <TextView
        android:id="@+id/txtPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/picker_text"
        android:ellipsize="start"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnUp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/picker_button_bg"
            android:textColor="@color/picker_text"
            android:gravity="center"
            android:textAllCaps="false"
            android:text=".." />

        <Button
            android:id="@+id/btnNewFolder"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/picker_button_bg"
            android:textColor="@color/picker_text"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/create_folder" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:backgroundTint="@color/picker_button_bg"
            android:gravity="center"
            android:text="Select current location"
            android:textAllCaps="false"
            android:textColor="@color/picker_text" />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_picker_list_border"
        android:padding="1dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/picker_background"
            android:clipToPadding="false"/>
    </FrameLayout>
</LinearLayout>
